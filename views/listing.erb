<html>
	<head>
		<link href="https://fonts.googleapis.com/css?family=Roboto&display=swap" rel="stylesheet">
		<style type="text/css">
			h2 {
				margin: 0px;
				padding: -10px;
				font-family: 'Roboto', sans-serif;
				font-size: 50px;
			}
			p {
				padding-top: -50px
			}
			table{
				border-collapse: collapse;
				border: 1px solid black;
			}
			th, td{
				text-align: left;
				padding: 8px
			} 
			tr:nth-child(even){background-color: #f2f2f2;}	
			.file{
				border: 2px solid gray;
				color: gray;
				background: white;
				padding: 8px 20px;
				padding-top: -20px;  
				border-radius: 8px;
				overflow: hidden; 
				position: center;
				margin-top: 20px;
			}
			.upload-btn-wrapper {
			  position: relative;
			  overflow: hidden;
			  display: inline-block;
			}

			.btn {
			  border: 2px solid gray;
			  color: gray;
			  background-color: white;
			  padding: 8px 20px;
			  border-radius: 8px;
			  font-size: 20px;
			  font-weight: bold;
			}
			.upload-btn-wrapper input[type=file] {
			  font-size: 100px;
			  position: absolute;
			  left: 0;
			  top: 0;
			  opacity: 0;
			}
		</style>
	</head>
	<body>
	<h2 align="center"> Public Files </h2>
	<p align="center">
		<br>
		<a href="/"  class="icon-block">
		<i class="icon-home icon-4x"></i> 
		<span> Homepage </span>
		</a> 
	</br>
	</p>
	<table align="center">
		<tr>
		<th>Filename</th>
		<th>Download</th>
		<th>Remove</th>
		<th>View</th>
		</tr>
		<% @files.each do |f| %>
			<%="<tr>"%>
				<%="<td> #{f}</td>"%>
				<%="<td><a href=\"/download/#{f}\"> Download </a> </td>"%>
				<%="<td><a href=\"/remove/#{f}\"> Remove </a>  </td>"%>
				<%="<td><a href=\"/public/#{f}\"> View </a>  </td>"%>
			<%="</tr>\n" %>
		<% end %>
	</table>

		<form method="post" action="/upload" enctype="multipart/form-data" align="center">
			<div class="box">
			<label for="file" class="">
				<input type="file" id="file" name="file[]" multiple>
			</label>
			</div>
			<div class="upload-btn-wrapper">
				<button class="btn">Submit</button>
			</div>
		</form>

	</body>
</html>